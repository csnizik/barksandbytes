{
  "name": "barks",
  "version": "1.0.0",
  "description": "Barks theme, generated from starterkit_theme. Includes tokenization with style-dictionary.js.",
  "main": "index.js",
  "scripts": {
    "build-tokens": "style-dictionary build -c ./style-dictionary.config.js",
    "watch-tokens": "chokidar './design-tokens/**/*.json' -c 'npm run build-tokens'",
    "build-css": "sass --load-path=src/sass/tokens sass/main.scss:css/main.css",
    "watch-css": "sass --load-path=src/sass/tokens --watch sass/main.scss:css/main.css",
    "build": "npm run build-tokens && npm run build-css",
    "watch": "concurrently \"npm:watch-*\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "style-dictionary": "^3.7.2"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "sass": "^1.62.0"
  }
}
